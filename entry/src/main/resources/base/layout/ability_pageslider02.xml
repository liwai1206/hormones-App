<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:background_element="$graphic:background_common"
    ohos:alignment="left"
    ohos:top_padding="10vp">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="113vp"
        ohos:orientation="vertical"
        ohos:alignment="left">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:id="$+id:text_current_speed"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="00"
                ohos:top_padding="10vp"
                ohos:text_size="25fp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="圈/分钟"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="当前速度"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>

    </DirectionalLayout>


</DirectionalLayout>