<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_toast_common">

    <Text
        ohos:id="$+id:text_title"
        ohos:top_padding="15vp"
        ohos:left_padding="22vp"
        ohos:height="match_content"
        ohos:width="340vp"
        ohos:text="删除设备"
        ohos:text_size="20vp"
        ohos:text_weight="500"/>


    <Text
        ohos:id="$+id:text_tip_info"
        ohos:left_padding="20vp"
        ohos:top_margin="15vp"
        ohos:height="match_content"
        ohos:width="330vp"
        ohos:text_size="15vp"
        ohos:text_weight="400"
        ohos:multiple_lines="true"
        ohos:line_height_num="1.5"
        ohos:text="此操作会清除手机和智慧生活云中有关该设备的所有数据。设备删除后，若再次使用，需重新添加。"/>

    <DirectionalLayout
        ohos:top_margin="15vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="vertical_center">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="169vp"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Button
                ohos:id="$+id:btn_cancel"
                ohos:height="40vp"
                ohos:width="60vp"
                ohos:text="取消"
                ohos:text_size="20vp"
                ohos:text_color="#0A59F7"
                ohos:text_weight="500"></Button>
        </DirectionalLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="|"
            ohos:text_size="20vp"
            ohos:text_color="#C5C5C5"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="169vp"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Button
                ohos:id="$+id:btn_ok"
                ohos:height="40vp"
                ohos:width="60vp"
                ohos:text="删除"
                ohos:text_size="20vp"
                ohos:text_color="#E84026"
                ohos:text_weight="500"></Button>
        </DirectionalLayout>
    </DirectionalLayout>



</DirectionalLayout>