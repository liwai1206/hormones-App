<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:background_element="$graphic:background_common"
    ohos:alignment="horizontal_center"
    ohos:top_padding="10vp">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="113vp"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:id="$+id:text_number_quan"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0"
                ohos:top_padding="10vp"
                ohos:text_size="25fp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="圈"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="圈数"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>

    </DirectionalLayout>

    <Button
        ohos:top_margin="20vp"
        ohos:height="30vp"
        ohos:width="1vp"
        ohos:background_element="#CDCDCD"/>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="113vp"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:id="$+id:text_number_bansheng"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0"
                ohos:top_padding="10vp"
                ohos:text_size="25fp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="次"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="绊绳数"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>

    </DirectionalLayout>

    <Button
        ohos:top_margin="20vp"
        ohos:height="30vp"
        ohos:width="1vp"
        ohos:background_element="#CDCDCD"/>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="113vp"
        ohos:orientation="vertical"
        ohos:alignment="horizontal_center">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:id="$+id:text_device_charge"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="50"
                ohos:top_padding="10vp"
                ohos:text_size="25fp"/>

            <Text
                ohos:id="$+id:text_device_charge_per"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text=" %"
                ohos:top_padding="15vp"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="电量"
                ohos:text_size="15fp"
                ohos:text_color="#52594E"/>
        </DirectionalLayout>

    </DirectionalLayout>


</DirectionalLayout>